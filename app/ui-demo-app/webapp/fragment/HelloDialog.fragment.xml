<core:FragmentDefinition
    xmlns= "sap.m"
    xmlns:core="sap.ui.core" >
    <Dialog 
        id="helloDialog"
        title="Hello {/recipient/name}"
    >
    <content>
        <core:Icon
            src="sap-icon://hello-world"
            size="6rem"
            class="sapUiLargeMargin"
        />
    </content>
    <beginButton>
        <Button
            text="{i18n>closeDialogButtonText}"
            press=".onCloseDialog"
        />
    </beginButton>
    </Dialog>
</core:FragmentDefinition>